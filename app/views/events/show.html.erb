
<div class="row">
  <!-- Event Content Column -->
  <div class="col-lg-12">
    <!-- Blog event -->
    <!-- Title -->
    <h1><%= @event.title %></h1>
    <hr>
    <!-- Date/Time -->
    <p><span class="glyphicon glyphicon-calendar"></span> <%= @event.date.strftime("%A, %B %e, %Y") %>
    <p><span class="glyphicon glyphicon-time"></span><%= @event.start_time.strftime("%l:%M %P") %> - <%= @event.end_time.strftime("%l:%M %P (%Z)") %></p></p>
    <p><span class="glyphicon glyphicon-envelope"></span>
      <%= @event.street_address %>
      <%= @event.city %>,
      <%= @event.state %><%= @event.zip %>
    </p>
    <hr>
    <!-- Preview Image -->

    <!-- Event Content -->
    <p><%= @event.description %></p>
    <hr>
    <!-- Event Comments -->
  </div>
</div>

<% if admin? %>
  <%= link_to "Edit", events_edit_path(@event), class:"btn btn-default" %>
  <%= link_to "Delete", events_path(@event), method: :delete, class:"btn btn-default" %>
<% end %>
