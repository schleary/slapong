<% @events.each do |event| %>
  <div class="row">
    <!-- Event Content Column -->
    <div class="col-lg-12">
      <!-- Blog event -->
      <!-- Title -->
      <h1><%= link_to event.title, event %></h1>
      <hr>
      <!-- Date/Time -->
      <p><span class="glyphicon glyphicon-time"></span> <%= event.date %> <%= event.start_time %> - <%= event.end_time %></p>
      <hr>
      <!-- Preview Image -->
      <!-- Event Content -->
      <p><%= event.description[0..350] %>... <%= link_to "read more", event %></p>
      <hr>
      <p>
        <%= event.street_address %>
        <%= event.city %>,
        <%= event.state %><%= event.zip %>
      </p>
      <!-- Event Comments -->
    </div>
  </div>
<% end %>

<%= link_to "Create a New Event", events_new_path, class:"btn btn-primary" %>
