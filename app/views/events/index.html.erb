<h1>Slap Events</h1>

<% if admin? %>
  <%= link_to "Create an Event", events_new_path, class:"btn btn-primary" %>
<% end %>

<% @events.each do |event| %>
  <div class="row">
    <!-- Event Content Column -->
    <div class="col-lg-12">
      <!-- Blog event -->
      <!-- Title -->
      <h2><%= link_to event.title, events_show_path(event) %></h2>
      <hr>
      <!-- Date/Time -->
      <p><span class="glyphicon glyphicon-calendar"></span> <%= event.date.strftime("%A, %B %e, %Y") %>
      <p><span class="glyphicon glyphicon-time"></span><%= event.start_time.strftime("%l:%M %P") %> - <%= event.end_time.strftime("%l:%M %P (%Z)") %></p></p>
      <p><span class="glyphicon glyphicon-envelope"></span>
        <%= event.street_address %>
        <%= event.city %>,
        <%= event.state %><%= event.zip %>
      </p>
      <hr>
      <!-- Preview Image -->
      <!-- Event Content -->
      <p><%= event.description[0..350] %>... <%= link_to "read more", events_show_path(event) %></p>
      <hr>
      <!-- Event Comments -->
    </div>
  </div>
<% end %>
