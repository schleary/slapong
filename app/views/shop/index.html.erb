<h1>Slapong Products</h1>
<% if admin? %>
  <%= link_to "Create a New Product", products_new_path, class:"btn btn-primary" %>
<% end %>

<img src="http://fakeimg.pl/1140x300/" alt="...">

<% @products.each do |product| %>
  <div class="row">
    <!-- Blog post Content Column -->
    <div class="col-lg-12">
      <!-- Blog post -->
      <div class="row">
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail">
            <img src="..." alt="...">
            <div class="caption">
              <h3><%= link_to product.name, products_show_path(product) %></h3>
              <p>
                Price: <%= product.price_cents %>
                In stock: <%= product.stock_quantity %>
              </p>
              <%= product.description %>
              <%= link_to "Add to cart", order_items_new_path, class:"btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
