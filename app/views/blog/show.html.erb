<% if admin? %>
  <%= link_to "Edit", posts_edit_path(@post), class:"btn btn-default" %>
  <%= link_to "Delete", posts_path(@post), method: :delete, class:"btn btn-default" %>
<% end %>

<div class="row">
  <!-- Blog post Content Column -->
  <div class="col-lg-8">
    <!-- Blog post -->
    <!-- Title -->
    <h1><%= @post.title %></h1>
    <hr>
    <div class="row">
      <div class="col-xs-6 col-md-3">
        <a href="#" class="thumbnail">
          <img src="..." alt="...">
        </a>
      </div>
      ...
    </div>
    <!-- Date/Time -->
    <!-- post Content -->
    <p class="lead"><%= @post.body %></p>
  </div>
</div>

