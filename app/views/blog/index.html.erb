<% @posts.each do |post| %>
  <div class="row">
    <!-- Blog post Content Column -->
    <div class="col-lg-12">
      <!-- Blog post -->
      <div class="row">
        <div class="col-xs-6 col-md-3">
          <a href="#" class="thumbnail">
            <img src="..." alt="...">
          </a>
        </div>
        ...
      </div>
      <!-- Title -->
      <h1><%= link_to post.title, posts_show_path(post) %></h1>
      <hr>
      <!-- Date/Time -->
      <p><span class="glyphicon glyphicon-time"></span> <%= post.created_at %></p>
      <hr>
      <!-- Preview Image -->
      <!-- post Content -->
      <p class="lead"><%= post.body[0..350] %>... <%= link_to "read more", posts_show_path(post) %></p>
      <hr>
      <!-- Blog Comments -->
    </div>
  </div>
<% end %>

<%= link_to "Create a New post", posts_new_path, class:"btn btn-primary" %>
