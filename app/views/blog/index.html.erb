<% @posts.each do |post| %>
  <div class="row">
    <!-- Blog post Content Column -->
    <div class="col-lg-12">
      <!-- Blog post -->
      <!-- Title -->
      <h1><%= link_to post.title, post %></h1>
      <hr>
      <!-- Date/Time -->
      <p><span class="glyphicon glyphicon-time"></span> <%= post.created_at %></p>
      <hr>
      <!-- Preview Image -->
      <!-- post Content -->
      <p class="lead"><%= post.body[0..350] %>... <%= link_to "read more", post %></p>
      <hr>
      <!-- Blog Comments -->
    </div>
  </div>
<% end %>

<%= link_to "Create a New post", posts_new_path, class:"btn btn-primary" %>
